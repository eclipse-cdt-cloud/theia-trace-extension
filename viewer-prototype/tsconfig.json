{
    "compilerOptions": {
        "strict": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "target": "ESNEXT",
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "lib",
        "types": ["node", "jest"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/__tests__",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
} 
